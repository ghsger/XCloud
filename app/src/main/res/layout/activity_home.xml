<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activity.ActivityHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/currentUserHeadImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            app:srcCompat="@drawable/user001" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/xcloudTitle"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:src="@drawable/xcloud01" />

            <Spinner
                android:id="@+id/spinnerUp"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/spinnerShow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                app:srcCompat="@drawable/sortimg02" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/search_style"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:src="@drawable/search" />

        <EditText
            android:id="@+id/searchFileText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="9"
            android:background="@null"
            android:hint="@string/search_file_string"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/searchFileEnter"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/enter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="16"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/listFileView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:minHeight="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/uploadFile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/upload" />

            <ImageView

                android:id="@+id/xcloudLogo"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/xcloud02" />

            <ImageView
                android:id="@+id/flushHomeFileList"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/flush" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>